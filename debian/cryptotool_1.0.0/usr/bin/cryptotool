#!/usr/bin/env python3
# -*- coding: utf-8 -*-

import subprocess
from rich.console import Console
from rich.table import Table
import pyfiglet
import os
import sys

# Configuration des chemins
DEFAULT_DATA_DIR = os.path.expanduser("~/.cryptotool")
os.makedirs(DEFAULT_DATA_DIR, exist_ok=True)

console = Console()

def get_absolute_path(filename):
    """Convertit les noms de fichiers en chemins absolus"""
    if not filename:
        return filename
    if not os.path.isabs(filename):
        return os.path.join(DEFAULT_DATA_DIR, filename)
    return filename

def fichier_existe(fichier):
    return os.path.isfile(get_absolute_path(fichier))

def afficher_menu():
    """Affiche le menu principal avec style ASCII et tableau"""
    title = pyfiglet.figlet_format("Outil de\nCryptographie")
    console.print(f"[bold cyan]{title}[/bold cyan]")

    table = Table(title="[italic bold]Menu Principal[/italic bold]", 
                 show_header=True, 
                 header_style="bold magenta")
    table.add_column("Option", justify="center", style="cyan", no_wrap=True)
    table.add_column("Description", style="bold yellow")

    options = [
        ("1", "Génération de clé privée (RSA)"),
        ("2", "Chiffrement d'une clé privée (AES/3DES)"),
        ("3", "Génération de clé publique (RSA)"),
        ("4", "Chiffrement de données (RSA/AES/3DES)"),
        ("5", "Déchiffrement de données (RSA/AES/3DES)"),
        ("6", "Calcul d'empreinte (MD5/SHA256)"),
        ("7", "Signature d'empreinte (RSA)"),
        ("8", "Vérification de signature (RSA)"),
        ("99", "Quitter"),
    ]

    for opt, desc in options:
        table.add_row(opt, desc)

    console.print(table)

def executer_commande(cmd):
    """Exécute une commande shell et gère les erreurs"""
    try:
        subprocess.run(cmd, check=True, shell=True)
    except subprocess.CalledProcessError as e:
        console.print(f"[red]Erreur OpenSSL : {e}[/red]")
        return False
    except FileNotFoundError:
        console.print("[red]Erreur : commande ou fichier introuvable.[/red]")
        return False
    return True

def gen_cle_pri():
    console.print("\n[bold yellow]Génération de clé privée[/bold yellow]")
    file_name = input("Nom de la clé privée : ")
    abs_path = get_absolute_path(file_name)
    
    cmd = f"openssl genpkey -algorithm RSA -out {abs_path} -pkeyopt rsa_keygen_bits:2048"
    if executer_commande(cmd):
        console.print(f"[green]{abs_path} créé avec succès ![/green]")

def chif_cle():
    console.print("\n[bold yellow]Chiffrement de clé privée[/bold yellow]")
    file_in = input("Nom de la clé à chiffrer : ")
    abs_in = get_absolute_path(file_in)
    
    if not fichier_existe(abs_in):
        return console.print("[red]Fichier introuvable.[/red]")
        
    file_out = input("Nom du fichier chiffré en sortie : ")
    abs_out = get_absolute_path(file_out)
    algo = input("Algorithme (aes256, des3) : ").lower()

    cmd = f"openssl pkey -in {abs_in} -{algo} -out {abs_out}"
    if executer_commande(cmd):
        console.print("[green]Clé chiffrée avec succès.[/green]")

def gen_cle_pub():
    console.print("\n[bold yellow]Génération de clé publique[/bold yellow]")
    file_in = input("Clé privée : ")
    abs_in = get_absolute_path(file_in)
    
    if not fichier_existe(abs_in):
        return console.print("[red]Clé privée introuvable.[/red]")
        
    file_out = input("Nom de la clé publique : ")
    abs_out = get_absolute_path(file_out)

    cmd = f"openssl pkey -in {abs_in} -pubout -out {abs_out}"
    if executer_commande(cmd):
        console.print("[green]Clé publique générée avec succès.[/green]")

def chif_d():
    console.print("\n[bold yellow]Chiffrement de données[/bold yellow]")
    file_in = input("Fichier à chiffrer : ")
    abs_in = get_absolute_path(file_in)
    
    if not fichier_existe(abs_in):
        return console.print("[red]Fichier introuvable.[/red]")
        
    file_out = input("Nom du fichier chiffré : ")
    abs_out = get_absolute_path(file_out)
    algo = input("Algorithme (RSA, AES-256, 3-DES) : ").upper()

    if algo == "RSA":
        cle_priv = input("Clé publique pour le chiffrement : ")
        abs_priv = get_absolute_path(cle_priv)
        
        if not fichier_existe(abs_priv):
            return console.print("[red]Clé publique introuvable.[/red]")

        cmd = f"openssl pkeyutl -encrypt -in {abs_in} -pubin -inkey {abs_priv} -out {abs_out}"
    
    elif algo in ["AES-256", "3-DES"]:
        if algo == "AES-256":
            cmd = f"openssl enc -aes-256-cbc -pbkdf2 -in {abs_in} -out {abs_out}"
        else:
            cmd = f"openssl enc -des-ede3-cbc -pbkdf2 -in {abs_in} -out {abs_out}"
    else:
        return console.print("[red]Algorithme non supporté.[/red]")

    if executer_commande(cmd):
        console.print("[green]Données chiffrées avec succès.[/green]")

def dechif_d():
    console.print("\n[bold yellow]Déchiffrement de données[/bold yellow]")
    file_in = input("Fichier à déchiffrer : ")
    abs_in = get_absolute_path(file_in)
    
    if not fichier_existe(abs_in):
        return console.print("[red]Fichier introuvable.[/red]")
        
    file_out = input("Nom du fichier déchiffré : ")
    abs_out = get_absolute_path(file_out)
    algo = input("Algorithme (RSA, AES-256, 3-DES) : ").upper()
    
    if algo == "RSA":
        cle_priv = input("Clé privée pour le déchiffrement : ")
        abs_priv = get_absolute_path(cle_priv)
        
        if not fichier_existe(abs_priv):
            return console.print("[red]Clé privée introuvable.[/red]")

        cmd = f"openssl pkeyutl -decrypt -in {abs_in} -inkey {abs_priv} -out {abs_out}"
    
    elif algo in ["AES-256", "3-DES"]:
        if algo == "AES-256":
            cmd = f"openssl enc -d -aes-256-cbc -pbkdf2 -in {abs_in} -out {abs_out}"
        else:
            cmd = f"openssl enc -d -des-ede3-cbc -pbkdf2 -in {abs_in} -out {abs_out}"
    else:
        return console.print("[red]Algorithme non supporté.[/red]")

    if executer_commande(cmd):
        console.print("[green]Données déchiffrées avec succès.[/green]")

def cal_em():
    console.print("\n[bold yellow]Calcul d'empreinte[/bold yellow]")
    algo = input("Fonction de hashage (md5, sha256, ...) : ")
    file_in = input("Fichier source : ")
    abs_in = get_absolute_path(file_in)
    
    if not fichier_existe(abs_in):
        return console.print("[red]Fichier introuvable.[/red]")
        
    empreinte = input("Nom du fichier de sortie de l'empreinte : ")
    abs_empreinte = get_absolute_path(empreinte)

    cmd = f"openssl dgst -{algo} -out {abs_empreinte} {abs_in}"
    if executer_commande(cmd):
        console.print("[green]Empreinte générée avec succès.[/green]")

def sign_em():
    console.print("\n[bold yellow]Signature d'empreinte[/bold yellow]")
    file_in = input("Fichier à signer : ")
    abs_in = get_absolute_path(file_in)
    
    if not fichier_existe(abs_in):
        return console.print("[red]Fichier introuvable.[/red]")
        
    cle_pri = input("Clé privée : ")
    abs_cle = get_absolute_path(cle_pri)
    
    if not fichier_existe(abs_cle):
        return console.print("[red]Clé privée introuvable.[/red]")
        
    sig_out = input("Nom du fichier signature : ")
    abs_sig = get_absolute_path(sig_out)

    cmd = f"openssl dgst -sha256 -sign {abs_cle} -out {abs_sig} {abs_in}"
    if executer_commande(cmd):
        console.print("[green]Signature créée avec succès.[/green]")

def ver_sign():
    console.print("\n[bold yellow]Vérification de signature[/bold yellow]")
    file = input("Fichier original : ")
    abs_file = get_absolute_path(file)
    
    if not fichier_existe(abs_file):
        return console.print("[red]Fichier original introuvable.[/red]")
        
    signature = input("Fichier de signature : ")
    abs_sig = get_absolute_path(signature)
    
    if not fichier_existe(abs_sig):
        return console.print("[red]Fichier de signature introuvable.[/red]")
        
    cle_pub = input("Clé publique : ")
    abs_pub = get_absolute_path(cle_pub)
    
    if not fichier_existe(abs_pub):
        return console.print("[red]Clé publique introuvable.[/red]")

    cmd = f"openssl dgst -sha256 -verify {abs_pub} -signature {abs_sig} {abs_file}"
    executer_commande(cmd)

def main():
    try:
        while True:
            afficher_menu()
            try:
                choice = input("Choisir une option : ").strip()
            except (EOFError, KeyboardInterrupt):
                console.print("\n[red]Fermeture de l'application...[/red]")
                break

            match choice:
                case "1": gen_cle_pri()
                case "2": chif_cle()
                case "3": gen_cle_pub()
                case "4": chif_d()
                case "5": dechif_d()
                case "6": cal_em()
                case "7": sign_em()
                case "8": ver_sign()
                case "99": break
                case _: console.print("[red]Option invalide. Veuillez réessayer.[/red]")

    except Exception as e:
        console.print(f"[bold red]Erreur critique : {e}[/bold red]")
    finally:
        console.print("[bold blue]Merci d'avoir utilisé CryptoTool.[/bold blue]")

if __name__ == "__main__":  
    # Vérification de l'installation d'OpenSSL
    if not executer_commande("openssl version"):
        console.print("[bold red]OpenSSL n'est pas installé ou n'est pas dans le PATH.[/bold red]")
        console.print("Installez-le avec :")
        console.print("  Ubuntu/Debian: [bold]sudo apt install openssl[/bold]")
        console.print("  CentOS/RHEL: [bold]sudo yum install openssl[/bold]")
        sys.exit(1)
        
    main()